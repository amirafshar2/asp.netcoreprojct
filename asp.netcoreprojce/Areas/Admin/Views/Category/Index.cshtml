






@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<BE.concrete.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategoryler</h4>
            <p class="card-description">

            </p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>  </th>
                        <th> # </th>
                        <th> Kategoryİsmi </th>
                        <th> Açıklama </th>
                        <th> Aktif </th>
                        <th> Pasif </th>
                        <th> Düzenle </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="py-1">
                                <img style="width:30px" src="https://cdn0.iconfinder.com/data/icons/infographic-orchid-vol-1/256/Colorful_Label-512.png" alt="image" />
                            </td>
                            <th>@item.id </th>
                            <td> @item.Name</td>
                            <td>@item.Description</td>
                            <td> <a href="#" class="btn btn-success">Aktif</a></td>
                            <td> <a href="#" class="btn btn-danger">Pasif</a></td>
                            <td> <a href="#" class="btn btn-warning">Düzenle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="/Admin/Category/AddCategory/" class="btn btn-info">Yeni Kategory Ekle</a>
            <br />
        </div>
    </div>
</div>
<br/>
<br/>

<br />
<br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new{page}))
