@using BE.concrete
@model List<Writer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<h1>Yazar Listesi</h1>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">

        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Striped Table </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>#</th>
                                <th>İsim Soyisim</th>
                                <th>Mail</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody id="TableBody">

                            @*  @foreach (var item in Model)
                            {
                            <tr>
                            <td><img src="@item.İmage" style="border:1px solid; border-radius:50px; width:10%;" /></td>
                            <th>@item.id</th>
                            <td>@item.Name</td>
                            <td >@item.Mail</td>
                            <td >@item.Status</td>
                            </tr>

                            } *@
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
    $(document).ready(function () {
        function Readall(all) {
            $.ajax({
                url: '/Admin/Writer/Readall',
                method: 'POST',
                beforeSend: function (xhr) {
                    console.log("istek gönderildi...");
                },
                success: function (data) {
                    console.log(data);
                    all(data);
                },
                error: function (error) {
                    console.error("istek başarısız");
                }
            });
        }

        Readall(function (data) {
            $.each(data, function (index, row) {
                $("#TableBody").append('<tr><td><img src="' + row.İmage + '" style="border:1px solid; border-radius:50px; width:10%;" /></td><th>' + row.id + '</th><td>' + row.name + '</td><td>' + row.mail + '</td><td>' + row.status + '</td></tr>');
            });
        });
    });
</script>


