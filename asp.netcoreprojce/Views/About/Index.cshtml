





@model IEnumerable<BE.concrete.About> 

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!--/main-->
<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Hakkımızda</h3>
		<div class="row inner-sec">
			<!--left-->
			<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
				@foreach (var item in Model)
				{
				<div class="blog-grid-top">

					<div class="blog_info_left_grid">
						<a href="single.html">
							<img src="@item.İmage1" class="img-fluid" alt="">
						</a>
					</div>
					<h3>
						@item.Name
					</h3>
					<p>
						@item.Details1
					</p>
					<a href="/Blog/Index/" class="btn btn-primary read-m">Anasayfa</a>
				</div>
				}
			</div>
			<!--//left-->
			<!--right-->
			<aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
				<div class="right-blog-info text-left">
					
					<div class="tech-btm">
						<img src="~/CoreTema/images/banner1.jpg" class="img-fluid" alt="">
					</div>
					
					@await Html.PartialAsync("~/Views/NewsLatter/Index.cshtml")

					@await Html.PartialAsync("~/Views/About/SocialMedia.cshtml")
				
					@await Component.InvokeAsync("ListAllBlog")
				</div>

			</aside>
			<!--//right-->
		</div>
	</div>
</section>
<!--//main-->

