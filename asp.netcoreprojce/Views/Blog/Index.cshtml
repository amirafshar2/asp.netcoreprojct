@using BE.concrete
@using Microsoft.EntityFrameworkCore.Metadata.Internal;



@model List<Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<div>
    @await Component.InvokeAsync("BannerList")
    <section class="main-content-w3layouts-agileits">

        <div class="container">
            <h3 class="tittle">Bloglar</h3>
            <div class="inner-sec">
                <!--left-->
                <div class="left-blog-info-w3layouts-agileits text-left">
                    <div class="row">
                        @foreach (var item in Model)
                        {


                            <div class="col-lg-4 card">
                                <a href="/Blog/BlogReadAll/@item.id/ ">
                                    <img src="@item.İmage" class="card-img-top img-fluid" alt="">
                                </a>
                                <div class="card-body">
                                    <ul class="blog-icons my-4">
                                        <li>
                                            <a href="#">
                                                <i class="far fa-calendar-alt"></i> @item.CreateDate.ToString("dd,MM.yyyy")
                                            </a>
                                        </li>
                                        <li class="mx-2">
                                            <a href="#">
                                                <i class="far fa-comment"></i> 0
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/Blog/BlogReadAll/@item.id/ ">
                                                <i class="fas fa-eye"></i> @item.Category.Name
                                            </a>
                                        </li>

                                    </ul>
                                    <h5 class="card-title">
                                        <a href="/Blog/BlogReadAll/@item.id/ ">@item.Title</a>
                                    </h5>
                                    <p class="card-text mb-3">@item.Content.Substring(0, (item.Content.Substring(0,130).LastIndexOf(" "))) ...  </p>
                                    <a href="/Blog/BlogReadAll/@item.id/ " class="btn btn-primary read-m">Devamını Oku</a>
                                </div>

                            </div>

                        }


                    </div>
                    <!--//left-->
                </div>
            </div>
        </div>
    </section>
</div>