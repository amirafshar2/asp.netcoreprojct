
@{
    Layout = null;
}
@model LoginSignupModelUser
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/AdminTema/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/AdminTema/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/AdminTema/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/AdminTema/css/animate.css" rel="stylesheet">
    <link href="~/AdminTema/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">5.0</h1>

            </div>
            <h3>Kayıt Ekranı</h3>
            <p>Yeni bir hesap oluşturun</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <input type="text" class="form-control" name="Name_SureName" asp-for="@Model.Name_SureName" placeholder="İsim Soyisim" required="">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="Email" asp-for="@Model.Email" placeholder="Email" required="">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="UserName" asp-for="@Model.UserName" placeholder="Kulanıcı adı" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="Password" asp-for="@Model.Password"  placeholder="Şifre" required="">
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" name="ConfirmPassword" asp-for="@Model.ConfirmPassword" placeholder="Şifre Tekrar" required="">
                </div>

                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Kulanım Şartlarını Okudum , Kabul ediyorum </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt ol</button>

                <p class="text-muted text-center"><small>Bir hesabiniz var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/RegisterUser/Login/">Giriş yap</a>
            </form>
            <p class="m-t"> <small>asp.net core 5.0 proje kampı | Tüm hakklar saklıdır &copy; @DateTime.Now.Year </small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/AdminTema/js/jquery-3.1.1.min.js"></script>
    <script src="~/AdminTema/js/popper.min.js"></script>
    <script src="~/AdminTema/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/AdminTema/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>
@foreach (var key in ViewData.ModelState.Keys)
{
    foreach (var error in ViewData.ModelState[key].Errors)
    {
        <div class="text-danger">@error.ErrorMessage</div>
    }
}