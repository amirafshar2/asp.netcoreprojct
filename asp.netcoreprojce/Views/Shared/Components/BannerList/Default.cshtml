@model IEnumerable<BE.concrete.Blog>

<div class="banner">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (var i = 0; i < Model.Count(); i++)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@((i == 0) ? "active" : "")"></li>
            }
        </ol>
        <div class="carousel-inner" role="listbox">
            @foreach (var blog in Model)
            {
				<div style="background: -webkit-linear-gradient(rgba(23, 22, 23, 0.2), rgba(23, 22, 23, 0.5)), url(@blog.İmage) no-repeat;
	background: -moz-linear-gradient(rgba(23, 22, 23, 0.2), rgba(23, 22, 23, 0.5)), url(@blog.İmage) no-repeat;
	background: -ms-linear-gradient(rgba(23, 22, 23, 0.2), rgba(23, 22, 23, 0.5)), url(@blog.İmage) no-repeat;
	background: linear-gradient(rgba(23, 22, 23, 0.2), rgba(23, 22, 23, 0.5)), url(@blog.İmage) no-repeat;
	background-size: cover;" class="carousel-item @(blog == Model.First() ? "active" : "")">
                    <div class="carousel-caption">
                        <h3>
                            @blog.Title

                        </h3>
                        <div class="read">
                            <a href="/Blog/BlogReadAll/@blog.id/" class="btn btn-primary read-m">Devamını Oku</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>












