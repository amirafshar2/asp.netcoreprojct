@model IEnumerable<BE.concrete.Blog>




<div class="tech-btm">
	<h4>Yazarın Diğer Yazıları...</h4>
	@foreach (var item in Model)
	{
		
		<div class="blog-grids row mb-3">
			<div class="col-md-5 blog-grid-left">
				<a href="/Blog/BlogReadAll/@item.id/">
					<img src="@item.İmage" class="img-fluid" alt="">
				</a>
			</div>
			<div class="col-md-7 blog-grid-right">

				<h5>
					<a href="/Blog/BlogReadAll/@item.id/">@item.Title</a>
				</h5>
				<div class="sub-meta">
					<span>
						<i class="far fa-clock"></i> @item.CreateDate.ToString("dd,MMM,yyyy")
					</span>
				</div>
			</div>

		</div>
	}


</div> @*Yazarın Diğer Yazıları*@