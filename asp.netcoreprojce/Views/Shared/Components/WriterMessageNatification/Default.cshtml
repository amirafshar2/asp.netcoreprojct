@model IEnumerable<BE.concrete.Message2>




<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
        <i class="mdi mdi-email-outline"></i>
        <span class="count-symbol bg-warning"></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
        <h6 class="p-3 mb-0">Mesajlar</h6>
        @foreach (var item in Model)
        {
            <div class="dropdown-divider"></div>
            <a class="dropdown-item preview-item">
                <div class="preview-thumbnail">
                    <img src="~/CoreWriterTema/assets/images/faces/face4.jpg" alt="image" class="profile-pic">
                </div>
                @{
                    TimeSpan difference = DateTime.Now.Subtract(item.Date);
                    
                    string timeDifference = $"{difference.Days} gün, {difference.Hours} saat, {difference.Minutes} dakika ";
                  }
                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                    <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.Senderid sana bir mesaj gönderdi</h6>
                    <p class="text-gray mb-0"> @timeDifference Önce</p>
                </div>
            </a>
            <div class="dropdown-divider"></div>
        }
        <div class="dropdown-divider"></div>
        <h6 class="p-3 mb-0 text-center">4 Yeni Mesaj</h6>
    </div>
</li>
